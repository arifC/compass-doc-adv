# Create runtimes
mutation {
	createRuntime(
		in: { 
			name: "development"
			description: "Only for Dev purposes."
			labels: { group: ["dev"]}
		}
	) {
		id
		name
	}
}

mutation {
	createRuntime(
		in: { 
			name: "production"
			description: "This is my first runtime."
			labels: { group: ["prod"]}
		}
	) {
		id
		name
	}
}

mutation {
	createRuntime(
		in: { 
			name: "staging"
			description: "This is my first runtime."
			labels: { group: ["staging"]}
		}
	) {
		id
		name
	}
}

# Create applications
mutation {
	createApplication(in: { 
		name: "test"
		description: "test"
		labels: {group: ["dev"]}
		apis: {
			name: "test"
			targetURL: "test"
			version: {
				value: "v1.0"
			}
			spec: {
				type: OPEN_API
				format: YAML
			}
		}
	}) 
	{
		id
		name
		description
		apis {
			data {
				name
				spec {
					format
					type
				}
				targetURL
				version {value}
			}
		}
		eventAPIs {
			data {
				name
				spec {
					format
					type
				}
				version {value}
			}
		}
	}
}

mutation {
	createApplication(in: { 
		name: "test"
		description: "test"
		labels: {group: ["dev"]}
		apis: {
			name: "test"
			targetURL: "test"
			version: {
				value: "v1.0"
			}
			spec: {
				type: OPEN_API
				format: YAML
			}
		}
	}) 
	{
		id
		name
		description
	}
}
